@rendermode InteractiveServer

<div class="space-y-6">
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Calendar Name</label>
        <input type="text" @bind="Settings.CalendarName" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue"
               placeholder="Enter a friendly name for this calendar" />
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Sync Interval</label>
        <select @bind="Settings.SelectedInterval" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue">
            <option value="15">Every 15 minutes</option>
            <option value="30">Every 30 minutes</option>
            <option value="60">Every hour</option>
        </select>
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
        <input type="date" @bind="Settings.StartDate" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue" />
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Sync Days Forward</label>
        <input type="number" @bind="Settings.SyncDaysForward" min="1" max="365"
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue"
               placeholder="Number of days to sync forward (default: 30)" />
        <p class="mt-1 text-sm text-gray-500">Number of days forward to synchronize events (1-365)</p>
    </div>

    <div class="flex items-center">
        <input type="checkbox" id="isPrivate" @bind="Settings.IsPrivate" 
               class="w-4 h-4 text-outlook-blue border-gray-300 rounded focus:ring-outlook-blue" />
        <label for="isPrivate" class="ml-2 text-sm text-gray-700">Mark events as private</label>
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Field Selection</label>
        <select @bind="Settings.FieldSelectionType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue">
            <option value="all">All Fields</option>
            <option value="essential">Essential Only</option>
        </select>
    </div>
</div>
