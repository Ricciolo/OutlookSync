@rendermode InteractiveServer
@using OutlookSync.Domain.Aggregates
@using OutlookSync.Domain.ValueObjects
@inject OutlookSync.Domain.Repositories.ICredentialRepository CredentialRepository
@inject OutlookSync.Domain.Repositories.ICalendarBindingRepository CalendarBindingRepository
@inject OutlookSync.Domain.Repositories.ICalendarEventRepositoryFactory CalendarEventRepositoryFactory
@inject OutlookSync.Domain.Repositories.IUnitOfWork UnitOfWork
@inject Microsoft.Extensions.Logging.ILogger<EditCalendarBindingDialog> Logger

@if (_isDialogOpen)
{
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" @onclick="CloseDialog">
        <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-2/3 xl:w-1/2 shadow-lg rounded-md bg-white max-h-[85vh] overflow-y-auto" @onclick:stopPropagation="true">
            <!-- Dialog Header -->
            <div class="flex items-center justify-between mb-6 pb-4 border-b sticky top-0 bg-white z-10">
                <h2 class="text-2xl font-bold text-gray-900">Edit Calendar Binding</h2>
                <button @onclick="CloseDialog" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            @if (_binding != null)
            {
                <!-- Dialog Content -->
                <div class="space-y-6">
                    <!-- Binding Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Binding Name</label>
                        <input type="text" @bind="_bindingName" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue"
                               placeholder="Enter binding name" />
                    </div>

                    <!-- Source/Target Info (Read-only) -->
                    <div class="card bg-gray-50">
                        <h4 class="font-semibold text-gray-900 mb-2">Source Calendar</h4>
                        <p class="text-sm text-gray-700">
                            <span class="font-medium">Credential ID:</span> @_binding.SourceCredentialId
                        </p>
                        <p class="text-sm text-gray-700">
                            <span class="font-medium">Calendar ID:</span> @_binding.SourceCalendarExternalId
                        </p>
                    </div>

                    <div class="card bg-gray-50">
                        <h4 class="font-semibold text-gray-900 mb-2">Target Calendar</h4>
                        <p class="text-sm text-gray-700">
                            <span class="font-medium">Credential ID:</span> @_binding.TargetCredentialId
                        </p>
                        <p class="text-sm text-gray-700">
                            <span class="font-medium">Calendar ID:</span> @_binding.TargetCalendarExternalId
                        </p>
                    </div>

                    <!-- Configuration Settings -->
                    <div>
                        <h4 class="font-semibold text-gray-900 mb-3">Synchronization Settings</h4>
                        <CalendarBindingSettingsForm @ref="_settingsForm" />
                    </div>

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
                            @_errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(_successMessage))
                    {
                        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md">
                            @_successMessage
                        </div>
                    }
                </div>

                <!-- Dialog Footer -->
                <div class="flex justify-end space-x-2 mt-8 pt-4 border-t sticky bottom-0 bg-white">
                    <button @onclick="CloseDialog" class="btn-secondary">
                        Cancel
                    </button>
                    
                    <button @onclick="SaveChanges" 
                            class="btn-primary"
                            disabled="@(_isSaving || string.IsNullOrWhiteSpace(_bindingName))">
                        @if (_isSaving)
                        {
                            <span class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></span>
                        }
                        Save Changes
                    </button>
                </div>
            }
        </div>
    </div>
}
