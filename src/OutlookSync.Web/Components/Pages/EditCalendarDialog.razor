@rendermode InteractiveServer
@using OutlookSync.Domain.Aggregates
@using OutlookSync.Domain.ValueObjects
@using OutlookSync.Web.Components.Shared
@inject OutlookSync.Domain.Repositories.ICalendarRepository CalendarRepository
@inject OutlookSync.Domain.Repositories.IUnitOfWork UnitOfWork
@inject Microsoft.Extensions.Logging.ILogger<EditCalendarDialog> Logger

@if (_isDialogOpen)
{
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" @onclick="CloseDialog">
        <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-2/3 xl:w-1/2 shadow-lg rounded-md bg-white" @onclick:stopPropagation="true">
            <!-- Dialog Header -->
            <div class="flex items-center justify-between mb-6 pb-4 border-b">
                <h2 class="text-2xl font-bold text-gray-900">Edit Calendar</h2>
                <button @onclick="CloseDialog" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Error Message -->
            @if (_errorMessage != null)
            {
                <div class="mb-4 bg-red-50 border border-red-200 rounded-lg p-4">
                    <p class="text-red-800">@_errorMessage</p>
                </div>
            }

            <!-- Settings Form -->
            <div class="min-h-[300px]">
                <CalendarSettingsForm Settings="_settings" />
            </div>

            <!-- Dialog Footer -->
            <div class="flex items-center justify-end space-x-2 mt-8 pt-4 border-t">
                <button @onclick="CloseDialog" class="btn-secondary">
                    Cancel
                </button>
                
                <button @onclick="SaveChangesAsync" 
                        class="btn-primary"
                        disabled="@(_isSaving || string.IsNullOrWhiteSpace(_settings.CalendarName))">
                    @if (_isSaving)
                    {
                        <span>Saving...</span>
                    }
                    else
                    {
                        <span>Save Changes</span>
                    }
                </button>
            </div>
        </div>
    </div>
}
