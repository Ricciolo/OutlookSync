@page "/calendar-bindings"
@rendermode InteractiveServer
@inject OutlookSync.Domain.Repositories.ICalendarBindingRepository CalendarBindingRepository
@inject OutlookSync.Domain.Repositories.IUnitOfWork UnitOfWork
@inject OutlookSync.Application.Services.ICalendarsSyncBackgroundService SyncService

<PageTitle>Calendar bindings - OutlookSync</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Calendar bindings</h1>
            <p class="text-gray-600 mt-1">Manage your calendar synchronization bindings</p>
            @if (SyncService.IsSyncing)
            {
                <span class="mt-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <div class="inline-block animate-spin rounded-full h-2 w-2 border-b border-blue-800 mr-1"></div>
                    Syncing
                </span>
            }
        </div>
        <div class="flex items-center space-x-3">
            @if (_bindings != null && _bindings.Any())
            {
                <button @onclick="SyncAllBindingsAsync" 
                        disabled="@_isSyncing" 
                        class="@(_isSyncing ? "btn-secondary opacity-50 cursor-not-allowed" : "btn-secondary")">
                    @if (_isSyncing && _syncingBindingId == null)
                    {
                        <div class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div>
                        <span>Syncing all...</span>
                    }
                    else
                    {
                        <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        <span>Sync all</span>
                    }
                </button>
            }
            <button @onclick="ShowAddBindingForm" class="btn-primary">
                <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add binding
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_syncMessage))
    {
        <div class="@(_syncSuccess ? "bg-green-50 border-l-4 border-green-400" : "bg-red-50 border-l-4 border-red-400") p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    @if (_syncSuccess)
                    {
                        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                    }
                    else
                    {
                        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                    }
                </div>
                <div class="ml-3">
                    <p class="@(_syncSuccess ? "text-green-700" : "text-red-700") text-sm">@_syncMessage</p>
                </div>
                <div class="ml-auto pl-3">
                    <button @onclick="ClearSyncMessage" class="@(_syncSuccess ? "text-green-500 hover:text-green-600" : "text-red-500 hover:text-red-600")">
                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    }

    @if (_isLoading)
    {
        <div class="card text-center py-12">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-outlook-blue"></div>
            <p class="mt-4 text-gray-600">Loading calendar bindings...</p>
        </div>
    }
    else if (_bindings == null || !_bindings.Any())
    {
        <!-- Empty state -->
        <div class="card text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No calendar bindings configured</h3>
            <p class="text-gray-600 mb-6">Get started by creating your first calendar binding to synchronize events between calendars</p>
            <button @onclick="ShowAddBindingForm" class="btn-primary">
                Add your first binding
            </button>
        </div>
    }
    else
    {
        <!-- Bindings list -->
        <div class="space-y-4">
            @foreach (var binding in _bindings)
            {
                <div class="card">
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <div class="flex items-center space-x-3">
                                <h3 class="text-lg font-semibold text-gray-900">@binding.Name</h3>
                                @if (binding.IsEnabled)
                                {
                                    <span class="badge badge-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Disabled</span>
                                }
                            </div>
                            <div class="mt-3 space-y-1 text-sm">
                                @if (binding.LastSyncAt.HasValue)
                                {
                                    <p class="text-gray-700">
                                        <span class="font-medium">Last sync:</span>
                                        @binding.LastSyncAt.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                        @if (!string.IsNullOrEmpty(binding.LastSyncError))
                                        {
                                            <span class="text-red-600 ml-2">
                                                (Failed: @binding.LastSyncError)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-green-600 ml-2">
                                                (@binding.LastSyncEventCount events)
                                            </span>
                                        }
                                    </p>
                                }
                                @{
                                    var scheduledInfo = GetScheduledInfo(binding.Id);
                                }
                                @if (binding.IsEnabled)
                                {
                                    <p class="text-gray-700">
                                        <span class="font-medium">Sync interval:</span>
                                        @binding.Configuration.Interval.Minutes minutes
                                        @if (scheduledInfo != null)
                                        {
                                            @if (scheduledInfo.IsSyncing)
                                            {
                                                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                                    <div class="inline-block animate-spin rounded-full h-2 w-2 border-b border-blue-800 mr-1"></div>
                                                    Auto-syncing now
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-600 ml-1">
                                                    - next sync @GetTimeUntilNextSync(scheduledInfo.NextSyncAt)
                                                </span>
                                            }
                                        }
                                    </p>
                                }
                                <p class="text-gray-700">
                                    <span class="font-medium">Title handling:</span>
                                    @binding.Configuration.TitleHandling
                                </p>
                                @if (binding.Configuration.MarkAsPrivate)
                                {
                                    <span class="badge badge-primary mt-1">Private</span>
                                }
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            @if (binding.IsEnabled)
                            {
                                <button @onclick="() => SyncBindingAsync(binding.Id)" 
                                        disabled="@_isSyncing"
                                        class="@(_isSyncing ? "btn-primary opacity-50 cursor-not-allowed" : "btn-primary")">
                                    @if (_isSyncing && _syncingBindingId == binding.Id)
                                    {
                                        <div class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div>
                                        <span>Syncing...</span>
                                    }
                                    else
                                    {
                                        <svg class="w-4 h-4 inline-block mr-1 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                        </svg>
                                        <span>Sync</span>
                                    }
                                </button>
                            }
                            <button @onclick="() => ToggleBindingAsync(binding)" 
                                    disabled="@_isSyncing"
                                    class="@(binding.IsEnabled ? "btn-secondary" : "btn-primary") @(_isSyncing ? "opacity-50 cursor-not-allowed" : "")">
                                @(binding.IsEnabled ? "Disable" : "Enable")
                            </button>
                            <button @onclick="() => EditBinding(binding)" 
                                    disabled="@_isSyncing"
                                    class="btn-secondary @(_isSyncing ? "opacity-50 cursor-not-allowed" : "")">
                                Edit
                            </button>
                            <button @onclick="() => DeleteBindingAsync(binding)" 
                                    disabled="@_isSyncing"
                                    class="btn-danger @(_isSyncing ? "opacity-50 cursor-not-allowed" : "")">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Add calendar binding dialog -->
<AddCalendarBindingDialog @ref="_addBindingDialog" OnBindingAdded="OnBindingAddedAsync" />

<!-- Edit calendar binding dialog -->
<EditCalendarBindingDialog @ref="_editBindingDialog" OnBindingUpdated="OnBindingUpdatedAsync" />
