@rendermode InteractiveServer
@using OutlookSync.Domain.Aggregates
@using OutlookSync.Domain.ValueObjects

@if (_isDialogOpen)
{
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" @onclick="CloseDialog">
        <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-2/3 xl:w-1/2 shadow-lg rounded-md bg-white" @onclick:stopPropagation="true">
            <!-- Dialog Header -->
            <div class="flex items-center justify-between mb-6 pb-4 border-b">
                <h2 class="text-2xl font-bold text-gray-900">Add New Calendar</h2>
                <button @onclick="CloseDialog" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Wizard Progress -->
            <div class="mb-8">
                <div class="flex items-center justify-between mb-2">
                    @for (int i = 1; i <= 3; i++)
                    {
                        var stepNumber = i;
                        <div class="flex items-center @(i < 3 ? "flex-1" : "")">
                            <div class="@GetStepClass(stepNumber) flex items-center justify-center w-10 h-10 rounded-full font-semibold">
                                @stepNumber
                            </div>
                            @if (i < 3)
                            {
                                <div class="flex-1 h-1 mx-2 @(_currentStep > stepNumber ? "bg-outlook-blue" : "bg-gray-300")"></div>
                            }
                        </div>
                    }
                </div>
                <div class="flex justify-between text-sm text-gray-600 mt-2">
                    <span class="flex-1 text-center">Select Credential</span>
                    <span class="flex-1 text-center">Choose Calendar</span>
                    <span class="flex-1 text-center">Configure</span>
                </div>
            </div>

            <!-- Step Content -->
            <div class="min-h-[300px]">
                @if (_currentStep == 1)
                {
                    <div class="space-y-4">
                        <p class="text-gray-700 mb-4">Select the credential to use for accessing calendars:</p>
                        
                        @if (_isLoadingCredentials)
                        {
                            <div class="flex justify-center py-8">
                                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-outlook-blue"></div>
                            </div>
                        }
                        else if (_credentials == null || !_credentials.Any())
                        {
                            <div class="text-center py-8">
                                <p class="text-gray-600 mb-4">No credentials found. Please add a credential first.</p>
                                <a href="/credentials" class="btn-primary">Go to Credentials</a>
                            </div>
                        }
                        else
                        {
                            <div class="space-y-2">
                                @foreach (var credential in _credentials)
                                {
                                    <div class="@GetCredentialCardClass(credential) border-2 rounded-lg p-4 cursor-pointer hover:border-outlook-blue transition-colors"
                                         @onclick="() => SelectCredential(credential)">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <h3 class="font-semibold text-gray-900">@credential.FriendlyName</h3>
                                                <p class="text-sm text-gray-600">
                                                    Status: 
                                                    @if (credential.IsTokenValid())
                                                    {
                                                        <span class="text-green-600">Valid</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-red-600">Invalid</span>
                                                    }
                                                </p>
                                            </div>
                                            @if (_selectedCredential?.Id == credential.Id)
                                            {
                                                <svg class="w-6 h-6 text-outlook-blue" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                                </svg>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (_currentStep == 2)
                {
                    <div class="space-y-4">
                        <p class="text-gray-700 mb-4">Select the calendar to add:</p>
                        
                        @if (_isLoadingCalendars)
                        {
                            <div class="flex justify-center py-8">
                                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-outlook-blue"></div>
                                <p class="ml-3 text-gray-600">Loading calendars...</p>
                            </div>
                        }
                        else if (_availableCalendars == null || !_availableCalendars.Any())
                        {
                            <div class="text-center py-8">
                                <p class="text-gray-600">No calendars found for this credential.</p>
                            </div>
                        }
                        else if (_errorMessage != null)
                        {
                            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                                <p class="text-red-800">@_errorMessage</p>
                            </div>
                        }
                        else
                        {
                            <div class="space-y-2">
                                @foreach (var calendar in _availableCalendars)
                                {
                                    <div class="@GetCalendarCardClass(calendar) border-2 rounded-lg p-4 cursor-pointer hover:border-outlook-blue transition-colors"
                                         @onclick="() => SelectCalendar(calendar)">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <h3 class="font-semibold text-gray-900">@calendar.Name</h3>
                                            </div>
                                            @if (_selectedCalendar?.ExternalId == calendar.ExternalId)
                                            {
                                                <svg class="w-6 h-6 text-outlook-blue" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                                </svg>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (_currentStep == 3)
                {
                    <div class="space-y-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Calendar Name</label>
                            <input type="text" @bind="_calendarName" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue"
                                   placeholder="Enter a friendly name for this calendar" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Sync Interval</label>
                            <select @bind="_selectedInterval" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue">
                                <option value="15">Every 15 minutes</option>
                                <option value="30" selected>Every 30 minutes</option>
                                <option value="60">Every hour</option>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
                            <input type="date" @bind="_startDate" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue" />
                        </div>

                        <div class="flex items-center">
                            <input type="checkbox" id="isPrivate" @bind="_isPrivate" 
                                   class="w-4 h-4 text-outlook-blue border-gray-300 rounded focus:ring-outlook-blue" />
                            <label for="isPrivate" class="ml-2 text-sm text-gray-700">Mark events as private</label>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Field Selection</label>
                            <select @bind="_fieldSelectionType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-outlook-blue">
                                <option value="all">All Fields</option>
                                <option value="essential">Essential Only</option>
                            </select>
                        </div>
                    </div>
                }
            </div>

            <!-- Dialog Footer -->
            <div class="flex items-center justify-between mt-8 pt-4 border-t">
                <button @onclick="PreviousStep" 
                        class="btn-secondary @(_currentStep == 1 ? "invisible" : "")"
                        disabled="@(_currentStep == 1)">
                    Previous
                </button>
                
                <div class="flex space-x-2">
                    <button @onclick="CloseDialog" class="btn-secondary">
                        Cancel
                    </button>
                    
                    @if (_currentStep < 3)
                    {
                        <button @onclick="NextStep" 
                                class="btn-primary"
                                disabled="@(!CanProceedToNextStep())">
                            Next
                        </button>
                    }
                    else
                    {
                        <button @onclick="SaveCalendar" 
                                class="btn-primary"
                                disabled="@(_isSaving || string.IsNullOrWhiteSpace(_calendarName))">
                            @if (_isSaving)
                            {
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save Calendar</span>
                            }
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
}
