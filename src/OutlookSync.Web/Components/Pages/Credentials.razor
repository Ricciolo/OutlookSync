@page "/credentials"
@rendermode InteractiveServer
@using OutlookSync.Domain.ValueObjects
@inject OutlookSync.Domain.Repositories.ICredentialRepository CredentialRepository
@inject OutlookSync.Domain.Services.ICredentialsService CredentialsService
@inject OutlookSync.Domain.Repositories.IUnitOfWork UnitOfWork
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<PageTitle>Credentials - OutlookSync</PageTitle>

<div class="space-y-6">
<!-- Header -->
<div class="flex items-center justify-between">
    <div>
        <h1 class="text-3xl font-bold text-gray-900">Credentials</h1>
        <p class="text-gray-600 mt-1">Manage authentication tokens for Outlook access</p>
    </div>
    <button @onclick="ToggleHelp" class="btn-secondary">
        <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Help
    </button>
</div>

    <!-- Help Panel -->
    @if (_showHelp)
{
    <div class="card bg-blue-50 border-blue-200">
        <div class="flex items-start justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-900">How to Configure Credentials</h2>
            <button @onclick="ToggleHelp" class="text-gray-400 hover:text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Quick Start -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">? Quick Start</h3>
            <div class="space-y-2 text-sm text-gray-700">
                <p><strong>1.</strong> Click "Add New Credential"</p>
                <p><strong>2.</strong> Enter a name (e.g., "Work Account")</p>
                <p><strong>3.</strong> Copy the code shown</p>
                <p><strong>4.</strong> Open the Microsoft login page</p>
                <p><strong>5.</strong> Paste code and sign in</p>
                <p><strong>6.</strong> Done! Wait a few seconds</p>
            </div>
        </div>

        <!-- Authentication Method Explanation -->
        <div class="mb-6 p-4 bg-white border border-blue-300 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Authentication Method</h3>
            <div class="space-y-2 text-sm text-gray-700">
                <p>
                    <strong>What is it?</strong> This app uses Microsoft Outlook's official ID to authenticate.
                </p>
                <p>
                    <strong>Why?</strong> No admin approval needed. Works immediately with any Microsoft account.
                </p>
                <p class="mt-2">
                    <strong>Is it safe?</strong> Yes!
                </p>
                <ul class="list-disc list-inside ml-4 space-y-1">
                    <li>Uses standard OAuth 2.0</li>
                    <li>Supported by Microsoft</li>
                    <li>Revoke access anytime</li>
                </ul>
            </div>
        </div>

        <!-- Revoke Access -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Remove Access</h3>
            <div class="space-y-2 text-sm text-gray-700">
                <p>Two ways to remove access:</p>
                <div class="space-y-2 ml-4">
                    <p><strong>1.</strong> Click "Delete" button here</p>
                    <p>
                        <strong>2.</strong> Visit 
                        <a href="https://account.microsoft.com/privacy/app-permissions" 
                           target="_blank" 
                           class="text-blue-600 hover:underline font-medium">
                            Microsoft Account Permissions
                        </a>
                    </p>
                </div>
                <p class="mt-2 p-2 bg-yellow-50 border border-yellow-200 rounded">
                    <strong>Note:</strong> For complete removal, do both steps.
                </p>
            </div>
        </div>

        <!-- Troubleshooting -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Problems?</h3>
            <div class="space-y-2 text-sm text-gray-700">
                <div>
                    <p class="font-medium">Code expired:</p>
                    <p class="ml-4">Click "Cancel" and start again.</p>
                </div>
                <div>
                    <p class="font-medium">Not detecting login:</p>
                    <p class="ml-4">Wait 10 seconds. Still not working? Cancel and retry.</p>
                </div>
                <div>
                    <p class="font-medium">Token expired:</p>
                    <p class="ml-4">Click "Refresh Token" or delete and create new.</p>
                </div>
            </div>
        </div>

        <!-- Important Links -->
        <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Useful Links</h3>
            <div class="space-y-1 text-sm">
                <p>
                    <a href="https://microsoft.com/devicelogin" target="_blank" class="text-blue-600 hover:underline">
                        Microsoft Device Login
                    </a>
                </p>
                <p>
                    <a href="https://account.microsoft.com/privacy/app-permissions" target="_blank" class="text-blue-600 hover:underline">
                        Manage App Permissions
                    </a>
                </p>
            </div>
        </div>
    </div>
}

    <!-- Device Flow Setup Modal -->
    @if (_showDeviceFlowSetup)
{
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" @onclick="CancelDeviceFlow">
        <div class="relative top-20 mx-auto p-8 border w-full max-w-2xl shadow-lg rounded-lg bg-white" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Configure New Credential</h2>
                <button @onclick="CancelDeviceFlow" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-red-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-red-800">@_errorMessage</p>
                            </div>
                        </div>
                    </div>
                }

            <!-- Step 1: Friendly Name -->
            @if (_deviceFlowStep == DeviceFlowStep.FriendlyName)
            {
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Friendly Name
                        </label>
                        <input type="text" 
                               @bind="_friendlyName" 
                               @bind:event="oninput"
                               placeholder="e.g., My Work Account"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-outlook-blue focus:border-transparent" />
                        <p class="mt-2 text-sm text-gray-600">
                            Enter a name to identify this credential (e.g., "Personal Account", "Work Email").
                        </p>
                    </div>

                    <div class="flex justify-end space-x-3 pt-4">
                        <button @onclick="CancelDeviceFlow" class="btn-secondary">
                            Cancel
                        </button>
                        <button @onclick="StartDeviceFlow" 
                                disabled="@(string.IsNullOrWhiteSpace(_friendlyName) || _isProcessing)"
                                class="btn-primary disabled:opacity-50 disabled:cursor-not-allowed">
                            @if (_isProcessing)
                            {
                                <span class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></span>
                            }
                            Next
                        </button>
                    </div>
                </div>
            }

            <!-- Step 2: Authentication Instructions -->
            @if (_deviceFlowStep == DeviceFlowStep.WaitingForAuth && _deviceCodeResult != null)
            {
                <div class="space-y-6">
                    <!-- Info Box: Outlook Trick Explanation -->
                    <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-blue-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                            </svg>
                            <div class="flex-1">
                                <h4 class="text-sm font-semibold text-blue-900 mb-1">Authentication Info</h4>
                                <p class="text-sm text-blue-800">
                                    Uses official Microsoft Outlook ID. No admin approval needed.
                                </p>
                                <p class="text-sm text-blue-800 mt-2">
                                    <strong>Revoke anytime:</strong> Delete here or visit 
                                    <a href="https://account.microsoft.com/privacy/app-permissions" 
                                       target="_blank" 
                                       class="underline hover:text-blue-600">
                                        Microsoft permissions
                                    </a>.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Authentication Code Display -->
                    <div class="bg-gradient-to-br from-outlook-blue to-blue-600 text-white rounded-lg p-6 text-center">
                        <p class="text-sm font-medium mb-2 opacity-90">Your Code</p>
                        <div class="text-4xl font-bold tracking-wider mb-4 font-mono">
                            @_deviceCodeResult.UserCode
                        </div>
                        <button @onclick="CopyCodeToClipboardAsync" class="inline-flex items-center px-4 py-2 bg-white text-outlook-blue rounded-lg hover:bg-gray-100 transition-colors">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                            </svg>
                            @_copyButtonText
                        </button>
                    </div>

                    <!-- Step-by-Step Instructions -->
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold text-gray-900">Follow these steps:</h3>
                            
                        <div class="space-y-3">
                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 w-8 h-8 bg-outlook-blue text-white rounded-full flex items-center justify-center font-semibold">
                                    1
                                </div>
                                <div class="flex-1">
                                    <p class="text-gray-900 font-medium">Open Microsoft login</p>
                                    <a href="@_deviceCodeResult.VerificationUrl" 
                                       target="_blank" 
                                       class="inline-flex items-center mt-2 px-4 py-2 bg-outlook-blue text-white rounded-lg hover:bg-blue-700 transition-colors">
                                        Open Page
                                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                        </svg>
                                    </a>
                                </div>
                            </div>

                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 w-8 h-8 bg-outlook-blue text-white rounded-full flex items-center justify-center font-semibold">
                                    2
                                </div>
                                <div class="flex-1">
                                    <p class="text-gray-900 font-medium">Enter code</p>
                                    <p class="text-sm text-gray-600 mt-1">
                                        Paste the code shown above.
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 w-8 h-8 bg-outlook-blue text-white rounded-full flex items-center justify-center font-semibold">
                                    3
                                </div>
                                <div class="flex-1">
                                    <p class="text-gray-900 font-medium">Sign in</p>
                                    <p class="text-sm text-gray-600 mt-1">
                                        Use your Microsoft credentials.
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 w-8 h-8 bg-outlook-blue text-white rounded-full flex items-center justify-center font-semibold">
                                    4
                                </div>
                                <div class="flex-1">
                                    <p class="text-gray-900 font-medium">Accept permissions</p>
                                    <p class="text-sm text-gray-600 mt-1">
                                        Allow calendar access.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                        <!-- Waiting Status -->
                        <div class="border-t pt-6">
                            <div class="flex items-center justify-center space-x-3">
                                <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-outlook-blue"></div>
                                <p class="text-gray-700">Waiting for authentication...</p>
                            </div>
                            @if (_deviceCodeResult.ExpiresOn.HasValue)
                            {
                                <p class="text-xs text-gray-600 mt-2">
                                    Code expires @_deviceCodeResult.ExpiresOn.Value.ToLocalTime().ToString("HH:mm:ss")
                                </p>
                            }
                        </div>

                    <div class="flex justify-end pt-4">
                        <button @onclick="CancelDeviceFlow" class="btn-secondary">
                            Cancel
                        </button>
                    </div>
                </div>
            }

            <!-- Step 3: Success -->
            @if (_deviceFlowStep == DeviceFlowStep.Success)
            {
                <div class="text-center py-8">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
                        <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Authentication Successful!</h3>
                    <p class="text-gray-600 mb-6">
                        Your credential "@_friendlyName" has been configured and saved.
                    </p>
                    <button @onclick="CompleteDeviceFlow" class="btn-primary">
                        Done
                    </button>
                </div>
            }
        </div>
    </div>
}

    @if (_isLoading)
    {
        <div class="card text-center py-12">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-outlook-blue"></div>
            <p class="mt-4 text-gray-600">Loading credentials...</p>
        </div>
    }
    else if (_credentials == null || !_credentials.Any())
    {
        <!-- Empty State -->
        <div class="card text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No credentials configured</h3>
            <p class="text-gray-600 mb-6">Set up device flow authentication to access Outlook calendars</p>
            <button @onclick="InitiateDeviceFlow" class="btn-primary">
                Configure Device Flow
            </button>
        </div>
    }
    else
    {
        <!-- Credentials List -->
        <div class="space-y-4">
            @foreach (var credential in _credentials)
            {
                <div class="card">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center space-x-3 mb-3">
                                    <h3 class="text-lg font-semibold text-gray-900">@credential.FriendlyName</h3>
                                    @switch (credential.TokenStatus)
                                {
                                    case TokenStatus.Valid:
                                        <span class="badge badge-success">
                                            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                            Valid
                                        </span>
                                        break;
                                    case TokenStatus.Expired:
                                        <span class="badge badge-warning">
                                            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                            Expired
                                        </span>
                                        break;
                                    case TokenStatus.Invalid:
                                        <span class="badge badge-danger">
                                            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                            </svg>
                                            Invalid
                                        </span>
                                        break;
                                    default:
                                        <span class="badge badge-info">Not Acquired</span>
                                        break;
                                }
                            </div>
                            
                            <div class="space-y-2 text-sm text-gray-700">
                                <p><span class="font-medium">Status:</span> @credential.TokenStatus.ToString()</p>
                                <p><span class="font-medium">Created:</span> @credential.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                @if (credential.UpdatedAt.HasValue)
                                {
                                    <p><span class="font-medium">Updated:</span> @credential.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                }
                            </div>

                            @if (credential.TokenStatus != TokenStatus.Valid)
                            {
                                <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                                    <p class="text-sm text-yellow-800">
                                        <svg class="w-5 h-5 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                        This credential needs to be renewed to continue syncing calendars.
                                    </p>
                                </div>
                            }
                        </div>
                        
                        <div class="flex flex-col space-y-2">
                            @if (credential.TokenStatus != TokenStatus.Valid)
                            {
                                <button @onclick="() => RefreshCredential(credential)" class="btn-primary">
                                    Refresh Token
                                </button>
                            }
                            <button @onclick="() => DeleteCredential(credential)" class="btn-danger">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Add New Credential -->
        <div class="card bg-gray-50 border-dashed border-2">
            <div class="text-center py-6">
                <button @onclick="InitiateDeviceFlow" class="btn-primary">
                    <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add New Credential
                </button>
            </div>
        </div>
    }

    <!-- Delete Confirmation Modal -->
    @if (_showDeleteConfirmation && _credentialToDelete != null)
    {
        <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" @onclick="CancelDelete">
            <div class="relative top-20 mx-auto p-6 border w-full max-w-md shadow-lg rounded-lg bg-white" @onclick:stopPropagation="true">
                <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                        <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Delete Credential</h3>
                        <p class="text-sm text-gray-600 mb-4">
                            Are you sure you want to delete the credential "<strong>@_credentialToDelete.FriendlyName</strong>"?
                        </p>
                        <div class="p-3 bg-yellow-50 border border-yellow-200 rounded-lg mb-4">
                            <p class="text-xs text-yellow-800">
                                <strong>Note:</strong> This will only remove the credential from OutlookSync. 
                                To fully revoke access, visit 
                                <a href="https://account.microsoft.com/privacy/app-permissions" 
                                   target="_blank" 
                                   class="underline hover:text-yellow-600">
                                    Microsoft Account Permissions
                                </a>.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="flex justify-end space-x-3 mt-4">
                    <button @onclick="CancelDelete" class="btn-secondary">
                        Cancel
                    </button>
                    <button @onclick="ConfirmDelete" class="btn-danger">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    }
</div>

