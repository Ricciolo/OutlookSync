@page "/credentials"
@using Microsoft.EntityFrameworkCore
@using OutlookSync.Domain.Aggregates
@using OutlookSync.Domain.Repositories
@using OutlookSync.Domain.ValueObjects
@inject ICredentialRepository CredentialRepository

<PageTitle>Credentials - OutlookSync</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div>
        <h1 class="text-3xl font-bold text-gray-900">Credentials</h1>
        <p class="text-gray-600 mt-1">Manage authentication tokens for Outlook access</p>
    </div>

    @if (isLoading)
    {
        <div class="card text-center py-12">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-outlook-blue"></div>
            <p class="mt-4 text-gray-600">Loading credentials...</p>
        </div>
    }
    else if (credentials == null || !credentials.Any())
    {
        <!-- Empty State -->
        <div class="card text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No credentials configured</h3>
            <p class="text-gray-600 mb-6">Set up device flow authentication to access Outlook calendars</p>
            <button @onclick="InitiateDeviceFlow" class="btn-primary">
                Configure Device Flow
            </button>
        </div>
    }
    else
    {
        <!-- Credentials List -->
        <div class="space-y-4">
            @foreach (var credential in credentials)
            {
                <div class="card">
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <div class="flex items-center space-x-3 mb-3">
                                <h3 class="text-lg font-semibold text-gray-900">Credential @credential.Id</h3>
                                @switch (credential.TokenStatus)
                                {
                                    case TokenStatus.Valid:
                                        <span class="badge badge-success">
                                            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                            Valid
                                        </span>
                                        break;
                                    case TokenStatus.Expired:
                                        <span class="badge badge-warning">
                                            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                            Expired
                                        </span>
                                        break;
                                    case TokenStatus.Invalid:
                                        <span class="badge badge-danger">
                                            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                            </svg>
                                            Invalid
                                        </span>
                                        break;
                                    default:
                                        <span class="badge badge-info">Not Acquired</span>
                                        break;
                                }
                            </div>
                            
                            <div class="space-y-2 text-sm text-gray-700">
                                <p><span class="font-medium">Status:</span> @credential.TokenStatus.ToString()</p>
                                <p><span class="font-medium">Created:</span> @credential.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                @if (credential.UpdatedAt.HasValue)
                                {
                                    <p><span class="font-medium">Updated:</span> @credential.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                }
                            </div>

                            @if (credential.TokenStatus != TokenStatus.Valid)
                            {
                                <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                                    <p class="text-sm text-yellow-800">
                                        <svg class="w-5 h-5 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                        This credential needs to be renewed to continue syncing calendars.
                                    </p>
                                </div>
                            }
                        </div>
                        
                        <div class="flex flex-col space-y-2">
                            @if (credential.TokenStatus != TokenStatus.Valid)
                            {
                                <button @onclick="() => RefreshCredential(credential)" class="btn-primary">
                                    Refresh Token
                                </button>
                            }
                            <button @onclick="() => DeleteCredential(credential)" class="btn-danger">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Add New Credential -->
        <div class="card bg-gray-50 border-dashed border-2">
            <div class="text-center py-6">
                <button @onclick="InitiateDeviceFlow" class="btn-primary">
                    <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add New Credential
                </button>
            </div>
        </div>
    }
</div>

@code {
    private List<Credential>? credentials;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCredentials();
    }

    private async Task LoadCredentials()
    {
        isLoading = true;
        try
        {
            credentials = await CredentialRepository.Query.ToListAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void InitiateDeviceFlow()
    {
        // TODO: Implement device flow authentication
        // This would typically:
        // 1. Start device flow with Microsoft Identity
        // 2. Display code and URL to user
        // 3. Poll for token acquisition
        // 4. Save credential when acquired
    }

    private async Task RefreshCredential(Credential credential)
    {
        // TODO: Implement token refresh logic
        await LoadCredentials();
    }

    private async Task DeleteCredential(Credential credential)
    {
        // TODO: Add confirmation dialog
        await CredentialRepository.DeleteAsync(credential);
        await LoadCredentials();
    }
}
